{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        
        {
            "label": "makeZhTw",
            "type": "shell",
            "command": "opencc -c s2tw.json -i '${file}' -o '${fileDirname}/${fileBasenameNoExtension}_zh-tw${fileExtname}'"
        },
        {
            "label": "moveImages",
            "type": "shell",
            "command": "cd '${workspaceFolder}'; python3 _utils.py ${relativeFile}"
        },
        {
            "label": "newPost",
            "type": "shell",
            "command": "python3 _util_template.py"
        },
        {
            "label": "renamePostFromTitle",
            "type": "shell",
            "command": "cd '${workspaceFolder}'; source .venv/bin/activate; python3 scripts/rename_post_from_title.py '${file}'",
            "problemMatcher": []
        }
    ]
}


        
